            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            app:layoutManager="LinearLayoutManager"
            tools:context=".ui.list.ItemFragment"
            tools:listitem="@layout/fragment_item" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/large_text6" />

        <karpiuk.ivan.myvisibilityproject.customViews.ItemFocusObservingRecyclerView
            android:id="@+id/list6"
            android:name="karpiuk.ivan.myvisibilityproject.ui.list.ItemFragment"
